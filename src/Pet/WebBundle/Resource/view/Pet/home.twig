{% extends 'index.twig' %}

{% block main %}
    <div class="body">
        <div class="row">
            <div class="col-md-12">
                {% for label, flashes in app.session.flashbag.all %}
                    {% for flash in flashes %}
                        <div class="alert alert-{{ label }}">
                            <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            {{ flash }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div id="progress-full" class="progress">
                    <span>Growl! :(</span>
                    <span>Burp :)</span>
                    <div class="progress-bar progress-bar-success" role="progressbar" style="width: {{ pet.full / status.max_full * 100 }}%"></div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div id="progress-clean" class="progress">
                    <span>Eeew! :(</span>
                    <span>Smooth :)</span>
                    <div class="progress-bar progress-bar-info" role="progressbar" style="width: {{ pet.clean / status.max_clean * 100 }}%"></div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <a id="food" href="{{ path("feed") }}" data-toggle="tooltip" data-placement="top" title="Click to feed me!">
                    <span class="glyphicon glyphicon-cutlery"></span>
                    <span class="badge">{{ pet.food }}</span>
                </a>
            </div>
            <div class="col-md-3">
                <a id="bath" href="{{ path("bathe") }}" data-toggle="tooltip" data-placement="top" title="Click to bathe me!">
                    <span class="glyphicon glyphicon-tint"></span>
                </a>
            </div>
            <div class="col-md-3 col-md-offset-3">
                <a id="bath" href="{{ path("star") }}" data-toggle="tooltip" data-placement="top" title="Use me for special growth / cure sickness!">
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="badge">{{ pet.star }}</span>
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div id="bird-nest"><img src="/images/bird-nest.jpg" /></div>
                <div id="bird-nest-bottom"><img src="/images/bird-nest.jpg" /></div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div id="pet" class="{{ pet.name|lower }} {{ status.condition }}" data-container="body" data-toggle="popover" data-placement="top" data-title="{{ pet.name }}" data-content="{{ status.message }}">
                    <img />
                </div>
            </div>
        </div>
    </div>
{% endblock %}
